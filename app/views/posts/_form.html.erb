<%= form_for @post, url: post_path(@post), method: :patch do |f| %>
		<% if @post.errors.any? %>
		  <div id="errors">
		  	<h2><%= pluralize(@post.errors.count, "Error") %> Prevent this post from posting</h2>
		  	<ul>
		  		<% @post.errors.full_messages.each do |msg| %>
		  			<li><%= msg %></li>

		  		<% end %>
		  	</ul>
		  </div>
		<% end %>
		<p>
			 <%= f.label :Edit_Post %><br>
			 <%= f.text_area :body %>
		</p>
		<p>
			<%= f.submit  %>
		</p>
		
<% end %>